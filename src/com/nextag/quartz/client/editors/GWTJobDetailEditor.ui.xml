<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
			xmlns:e='urn:import:com.google.gwt.editor.ui.client' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="../common.css">
		.panel {
			background-color: ivory;
		}
	</ui:style>
	
	<g:SimplePanel>
		<g:Grid width="100%" height="">
			<g:row>
				<g:customCell>
					<g:Label text="job name"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="nameEditor"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Job Group"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="groupEditor"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Description"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="descriptionEditor"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Job ClassName"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="jobClassNameEditor"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="JobDataMap"/>
				</g:customCell>
				<g:customCell>
					<p1:DataGrid width="250px" height="200px" ui:field="jobDataMapTable"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:CheckBox text="Durable" ui:field="durableEditor"/>
				</g:customCell>
				<g:customCell>
					<g:CheckBox text="recovable" ui:field="requestsRecoveryEditor"/>
				</g:customCell>
			</g:row>
		</g:Grid>
		
	</g:SimplePanel>
	
</ui:UiBinder>
