<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="../common.css">
		 .displayInline {
      	display: inline;
      }
      
      .table {
      	width: 100%;
      	table-layout: fixed;
      }
	</ui:style>


	<g:DockLayoutPanel unit="EM">
		<g:north size="2.5">
			<g:DockLayoutPanel unit="EM">
				<g:east size="34.7">
					<g:SimplePanel >
						<p1:SimplePager location="CENTER" ui:field="pager" display="{table}" stylePrimaryName="{style.rightAlign}"/>
					</g:SimplePanel>
				</g:east>
			</g:DockLayoutPanel>
		</g:north>
		<g:center>
			<g:SimplePanel>
				<p1:DataGrid width="100%" height="100%" ui:field="table"/>
			</g:SimplePanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>
